<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<BorderPane
        fx:id="mainPane"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="gui.CardCutter">
    <top>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="20"  />
                <ColumnConstraints percentWidth="20" />
                <ColumnConstraints percentWidth="60" />
            </columnConstraints>
            <Label text="Author"
                   GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>

            <TextField fx:id="authorField" disable="true"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>

            <Label text="Date"
                   GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>

            <TextField fx:id="dateField" disable="true"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Other cite info"
                   GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>

            <TextField fx:id="additionalField" disable="true"
                       GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        </GridPane>
    </top>
    <center>
        <TextFlow fx:id="cardTextArea"/>
    </center>
</BorderPane>

